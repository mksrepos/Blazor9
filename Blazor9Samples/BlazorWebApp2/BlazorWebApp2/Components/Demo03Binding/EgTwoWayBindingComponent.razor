
<div class="alert alert-secondary p-3 m-5">

    <p>The child component increments the Counter, received as a parameter.</p>

    <button class="btn btn-primary" @onclick="OnClick">Click Me</button>

    <p>Counter: @Counter</p>

</div>


@code {

    [Parameter]
    public int Counter { get; set; } = 0;

    // NOTE: For two-way binding to work, the name of the property should be "<parameter>Changed"
    [Parameter]
    // public EventCallback CounterChanged { get; set; }
    public EventCallback<int> CounterChanged { get; set; }

    private async void OnClick()
    {
        Counter++;

        await CounterChanged.InvokeAsync(Counter);
    }

}
