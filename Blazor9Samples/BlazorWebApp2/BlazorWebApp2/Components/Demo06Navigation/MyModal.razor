@if (!_isShown)
{
    return;
}

<div class="modal-container" @onclick="Close">
    <div class="modal-content" @onclick:stopPropagation=true>
        <h3>
            @Title
            <span @onclick="Close" title="close" class="close">X</span>
        </h3>

        @ChildContent

        <button @onclick="Accept">Accept</button>
    </div>
</div>


